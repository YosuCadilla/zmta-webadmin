<h2>{{message}}</h2>

<p>{{error.status}}</p>
{{#if error.errorStack}}
    <pre>{{error.errorStack}}</pre>
{{/if}}

{{#if error.logEntries}}
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <div>
                Log entries for {{error.logId}}
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Entry
                        </th>
                        <th>
                            Action
                        </th>
                        <th>
                            Data
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each error.logEntries}}
                        <tr>
                            <td>
                                <code>{{id}}</code><br />
                                <small>{{time}}</small>
                            </td>
                            <td>
                                {{action}}
                            </td>
                            <td>
                                <div class="table-responsive">
                                    <table class="table table-condensed">
                                        {{#each message}}
                                            <tr>
                                                <td>
                                                    {{key}}
                                                </td>
                                                <td>
                                                    {{value}}
                                                </td>
                                            </tr>
                                        {{/each}}
                                    </table>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{/if}}
