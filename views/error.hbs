<h2>{{message}}</h2>

<p>{{error.status}}</p>
{{#if error.errorStack}}
    <pre>{{error.errorStack}}</pre>
{{/if}}

{{#if error.logEntries}}
    <h3>Log entries for {{error.logId}}</h3>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        ID
                    </th>
                    <th>
                        Action
                    </th>
                    <th>
                        Data
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each error.logEntries}}
                    <tr>
                        <td class="col-md-2">
                            {{time}}
                        </td>
                        <td>
                            {{id}}
                        </td>
                        <td>
                            {{action}}
                        </td>
                        <td>
                            <table class="table table-condensed">
                                {{#each message}}
                                    <tr>
                                        <td>
                                            {{key}}
                                        </td>
                                        <td>
                                            {{value}}
                                        </td>
                                    </tr>
                                {{/each}}
                            </table>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

{{/if}}
