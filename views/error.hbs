<h2>{{message}}</h2>

<p>{{error.status}}</p>
{{#if error.errorStack}}
    <pre>{{error.errorStack}}</pre>
{{/if}}

{{#if error.logEntries}}
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <div>
                Log entries for {{error.logId}}
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Entry
                        </th>
                        <th>
                            Action
                        </th>
                        <th>
                            Data
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each error.logEntries}}
                        <tr>
                            <td>
                                <small>{{id}}</small><br />
                                <small>{{time}}</small>
                            </td>
                            <td>
                                {{#if actionLabel}}
                                    <span class="label label-{{actionLabel}}">{{action}}</span>
                                {{else}}
                                    {{action}}
                                {{/if}}
                            </td>
                            <td class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-condensed">
                                        {{#each message}}
                                            <tr>
                                                <td>
                                                    {{key}}
                                                </td>
                                                <td>
                                                    <textarea class="form-control input-sm" rows="1" readonly>{{value}}</textarea>
                                                </td>
                                            </tr>
                                        {{/each}}
                                    </table>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{/if}}
